<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@color/black"
        android:id = "@+id/showProposalListBack">
        
    	<TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:text="@string/backChar"
	        android:textColor ="@color/lightGrey"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/open_antrag" />    	
    	
	    <TextView
	        android:id="@+id/textHeadline"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_centerVertical="true"
	        android:text="@string/showProposal"
   	        android:textColor ="@color/lightGrey"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@color/white"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/oa_proposal"/>
            	
	    <TextView
	        android:id="@+id/proposalText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
   	        android:textColor ="@color/darkGrey"
   	        android:background="@color/white"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
        
    </LinearLayout>
    
    <ListView
        android:id="@+id/listProposalProcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    

</LinearLayout>
